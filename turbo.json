{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "ANTHROPIC_API_KEY",
    "ELEVENLABS_API_KEY",
    "REVALIDATION_SECRET",
    "DATABASE_URL",
    "PAYLOAD_SECRET",
    "RESEND_API_KEY",
    "NODE_ENV",
    "VERCEL_URL",
    "VERCEL_ENV",
    "BETTER_AUTH_SECRET",
    "BETTER_AUTH_URL",
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "SUPABASE_SERVICE_ROLE_KEY",
    "KV_REST_API_URL",
    "KV_REST_API_TOKEN",
    "API_KEY_ENCRYPTION_SECRET",
    "PAYPAL_CLIENT_ID",
    "PAYPAL_CLIENT_SECRET",
    "PAYPAL_SANDBOX"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
