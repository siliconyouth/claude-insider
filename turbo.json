{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "daemon": true,
  "cacheDir": ".turbo/cache",
  "globalEnv": [
    "ANTHROPIC_API_KEY",
    "ELEVENLABS_API_KEY",
    "REVALIDATION_SECRET",
    "DATABASE_URL",
    "PAYLOAD_SECRET",
    "RESEND_API_KEY",
    "NODE_ENV",
    "VERCEL_URL",
    "VERCEL_ENV",
    "BETTER_AUTH_SECRET",
    "BETTER_AUTH_URL",
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "SUPABASE_SERVICE_ROLE_KEY",
    "KV_REST_API_URL",
    "KV_REST_API_TOKEN",
    "API_KEY_ENCRYPTION_SECRET",
    "PAYPAL_CLIENT_ID",
    "PAYPAL_CLIENT_SECRET",
    "PAYPAL_SANDBOX",
    "NEXT_PUBLIC_PAYPAL_CLIENT_ID",
    "NEXT_PUBLIC_SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY",
    "NEXT_PUBLIC_APP_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "!.env.local"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "build/**"
      ],
      "env": ["NODE_ENV", "VERCEL_ENV"]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "!.env.local",
        "content/**",
        "data/**"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "data/rag-index.json",
        "data/build-info.json"
      ],
      "env": ["NODE_ENV", "VERCEL_ENV"]
    },
    "lint": {
      "dependsOn": [],
      "inputs": ["$TURBO_DEFAULT$", "eslint.config.*"],
      "outputs": [],
      "cache": true
    },
    "check-types": {
      "dependsOn": [],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json"],
      "outputs": [],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
